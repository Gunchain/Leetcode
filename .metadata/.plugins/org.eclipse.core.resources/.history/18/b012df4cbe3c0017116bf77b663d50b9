
public class Solution {

	public int reverse(int x) {
        if (x > -10 && x < 10){
        	return x;
        }
        x = (long)x;
        boolean ne = false;
        if (x < 0){
        	x = 0 - x;
        	ne = true;
        }
        long re = 0;
		while(x >= 10){
        	re *= 10;
        	re += x % 10;
        	x /= 10;
        }
		if (re > Integer.MAX_VALUE / 10){
			return 0;
		}
		re = re * 10 + x;
		if (ne){
			re = 0 - re;
		}
		
		return (int)re;
    }
}
